<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.datasqrl</groupId>
    <artifactId>sqrl-server</artifactId>
    <version>0.8-SNAPSHOT</version>
  </parent>

  <artifactId>sqrl-server-vertx</artifactId>
  <name>SQRL :: Server :: Vert.x</name>

  <properties>
    <docker.image.name>datasqrl/sqrl-server</docker.image.name>
  </properties>

  <dependencies>
    <!-- Vertx -->
    <dependency>
      <groupId>com.datasqrl</groupId>
      <artifactId>sqrl-server-vertx-base</artifactId>
    </dependency>

    <dependency>
      <groupId>io.vertx</groupId>
      <artifactId>vertx-launcher-application</artifactId>
    </dependency>
  </dependencies>

  <build>
    <finalName>vertx-server</finalName>
    <plugins>
      <!-- Use Jib to build layered Docker images -->
      <plugin>
        <groupId>com.google.cloud.tools</groupId>
        <artifactId>jib-maven-plugin</artifactId>
        <configuration>
          <from>
            <image>eclipse-temurin:17</image>
          </from>
          <to>
            <image>${docker.image.name}:${docker.image.tag}</image>
          </to>
          <container>
            <mainClass>com.datasqrl.graphql.SqrlLauncher</mainClass>
            <workingDirectory>/opt/sqrl/config</workingDirectory>
            <entrypoint>/opt/sqrl/entrypoint.sh</entrypoint>
          </container>
          <extraDirectories>
            <paths>
              <path>
                <from>${project.basedir}/src/main/jib</from>
                <includes>
                  <include>**/*</include>
                </includes>
              </path>
            </paths>
            <permissions>
              <permission>
                <file>/opt/sqrl/entrypoint.sh</file>
                <mode>755</mode>
              </permission>
            </permissions>
          </extraDirectories>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>instrument</id>

      <build>
        <plugins>
          <!-- JaCoCo instrumentation not needed with Jib layered approach -->
          <!-- Instrumentation will be handled by standard JaCoCo agent -->
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
