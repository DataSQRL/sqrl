{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "description": "The version number for the configuration schema",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "integer"
        }
      ]
    },
    "enabled-engines": {
      "description": "List of engines to enable for the data pipeline. The compiler builds deployment artifacts for the enabled engines during the build.",
      "oneOf": [
        {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        {
          "type": "string"
        }
      ]
    },
    "compiler": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "logger": {
          "type": "string"
        },
        "extended-scalar-types": {
          "type": "boolean"
        },
        "compile-flink-plan": {
          "type": "boolean"
        },
        "cost-model": {
          "type": "string",
          "enum": ["DEFAULT", "READ", "WRITE"],
          "pattern": "^[A-Z_]+$"
        },
        "explain": {
          "type": "object",
          "minProperties": 1,
          "properties": {
            "visual": {
              "type": "boolean"
            },
            "physical": {
              "type": "boolean"
            },
            "logical": {
              "type": "boolean"
            },
            "text": {
              "type": "boolean"
            },
            "sorted": {
              "type": "boolean"
            },
            "sql": {
              "type": "boolean"
            }
          }
        },
        "api": {
          "type": "object",
          "properties": {
            "protocols": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["GRAPHQL", "REST", "MCP"],
                "pattern": "^[A-Z_]+$"
              }
            },
            "endpoints": {
              "type": "string",
              "enum": ["OPS_ONLY", "GRAPHQL", "FULL"],
              "pattern": "^[A-Z_]+$"
            },
            "add-prefix": {
              "type": "boolean"
            },
            "max-result-depth": {
              "type": "integer"
            },
            "default-limit": {
              "type": "integer"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "script": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "main": {
          "type": "string"
        },
        "graphql": {
          "type": "string"
        },
        "operations": {
          "type": "array",
          "items": { "type": "string" }
        },
        "api": {
          "type": "object",
          "minProperties": 1,
          "properties": {
            "schema": {
              "type": "string"
            },
            "operations": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": false,
          "required": ["schema"]
        },
        "config":{
          "type": "object",
          "minProperties": 1,
          "additionalProperties": true
        }
      },
      "additionalProperties": false,
      "allOf": [
        {
          "not": {
            "required": ["api", "graphql"]
          }
        },
        {
          "not": {
            "required": ["api", "operations"]
          }
        }
      ]
    },
    "engines": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "duckdb": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string"
            },
            "config": {
              "type": "object",
              "minProperties": 1
            }
          },
          "required": ["url"]
        },
        "flink": {
          "type": "object",
          "minProperties": 1,
          "properties": {
            "config": {
              "type": "object",
              "minProperties": 1
            },
            "deployment": {
              "type": "object",
              "properties": {
                "jobmanager-size": {
                  "type": "string",
                  "enum": ["dev", "small", "medium", "large"]
                },
                "taskmanager-size": {
                  "type": "string",
                  "enum": ["dev", "small", "small.mem", "small.cpu", "medium", "medium.mem", "medium.cpu", "large", "large.mem", "large.cpu"]
                },
                "taskmanager-count": {
                  "type": "integer",
                  "minimum": 1
                },
                "secrets": {
                  "oneOf": [
                    {
                      "type": "null"
                    },
                    {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "minLength": 1
                      },
                      "minItems": 1
                    }
                  ]
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "snowflake": {
          "type": "object",
          "properties": {
            "catalog-name": {
              "type": "string"
            },
            "external-volume": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          },
          "required": ["catalog-name", "external-volume", "url"],
          "additionalProperties": false
        },
        "vertx": {
          "type": "object",
          "properties": {
            "authKind": {
              "type": "string",
              "enum": ["NONE", "JWT"]
            },
            "config": {
              "type": "object",
              "minProperties": 1
            },
            "deployment": {
              "type": "object",
              "properties": {
                "instance-size": {
                  "type": "string",
                  "enum": ["dev", "small", "small.disk", "medium", "medium.disk", "large", "large.disk"]
                },
                "instance-count": {
                  "type": "integer",
                  "minimum": 1
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "postgres": {
          "type": "object",
          "properties": {
            "config": {
              "type": "object",
              "minProperties": 1
            },
            "deployment": {
              "type": "object",
              "properties": {
                "instance-size": {
                  "type": "string",
                  "enum": ["dev", "small", "medium", "large", "xlarge"]
                },
                "replica-count": {
                  "type": "integer",
                  "minimum": 0
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "kafka": {
          "type": "object",
          "properties": {
            "retention": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            },
            "watermark": {
              "type": "string"
            },
            "transaction-watermark": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "connectors": {
      "type": "object",
      "minProperties": 1
    },
    "package": {
      "type": "object",
      "minProperties": 1
    },
    "test-runner": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "snapshot-folder": {
          "type": "string"
        },
        "test-folder": {
          "type": "string"
        },
        "delay-sec": {
          "type": "integer"
        },
        "mutation-delay-sec": {
          "type": "integer"
        },
        "required-checkpoints": {
          "type": "integer"
        },
        "headers": {
          "type": "object",
          "minProperties": 1
        },
        "create-topics": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
