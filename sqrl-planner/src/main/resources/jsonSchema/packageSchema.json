{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "integer"
        }
      ]
    },
    "enabled-engines": {
      "oneOf": [
        {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        {
          "type": "string"
        }
      ]
    },
    "compiler": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "logger": {
          "type": "string"
        },
        "extended-scalar-types": {
          "type": "boolean"
        },
        "compile-flink-plan": {
          "type": "boolean"
        },
        "cost-model": {
          "type": "string"
        },
        "explain": {
          "type": "object",
          "minProperties": 1,
          "properties": {
            "visual": {
              "type": "boolean"
            },
            "physical": {
              "type": "boolean"
            },
            "logical": {
              "type": "boolean"
            },
            "text": {
              "type": "boolean"
            },
            "sorted": {
              "type": "boolean"
            },
            "sql": {
              "type": "boolean"
            }
          }
        },
        "api": {
          "type": "object",
          "properties": {
            "protocols": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["GRAPHQL", "REST", "MCP"]
              }
            },
            "endpoints": {
              "type": "string",
              "enum": ["OPS_ONLY", "GRAPHQL", "FULL"]
            },
            "add-prefix": {
              "type": "boolean"
            },
            "result-depth": {
              "type": "integer"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "script": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "main": {
          "type": "string"
        },
        "graphql": {
          "type": "string"
        },
        "operations": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "engines": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "flink": {
          "type": "object",
          "minProperties": 1,
          "properties": {
            "config": {
              "type": "object",
              "minProperties": 1
            }
          },
          "additionalProperties": false
        },
        "snowflake": {
          "type": "object",
          "properties": {
            "catalog-name": {
              "type": "string"
            },
            "external-volume": {
              "type": "string"
            },
            "schema-type": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "connectors": {
      "type": "object",
      "minProperties": 1
    },
    "dependencies": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "version": {
              "type": "string"
            },
            "variant": {
              "type": "string"
            }
          },
          "required": ["name", "version"],
          "additionalProperties": false
        }
      }
    },
    "package": {
      "type": "object",
      "minProperties": 1
    },
    "test-runner": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "snapshot-dir": {
          "type": "string"
        },
        "test-dir": {
          "type": "string"
        },
        "delay-sec": {
          "type": "integer"
        },
        "mutation-delay-sec": {
          "type": "integer"
        },
        "required-checkpoints": {
          "type": "integer"
        },
        "headers": {
          "type": "object",
          "minProperties": 1
        },
        "create-topics": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}