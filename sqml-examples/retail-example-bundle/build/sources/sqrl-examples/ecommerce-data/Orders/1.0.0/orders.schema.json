{
  "$id": "orders.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Orders",
  "type": "object",
  "required": ["id", "customerid", "time", "entries"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "integer"
    },
    "customerid": {
      "type": "integer"
    },
    "time": {
      "type": "string"
    },
    "entries": {
      "type": ["array", "object"],
      "items" : {
        "type": "object",
        "additionalProperties": false,
        "required": ["productid", "quantity", "unit_price"],
        "properties": {
          "productid": {
            "type": "integer"
          },
          "quantity": {
            "type": "integer"
          },
          "unit_price": {
            "type": "number"
          },
          "discount": {
            "type": ["number", "null"]
          }
        }
      }
    }
  }
}