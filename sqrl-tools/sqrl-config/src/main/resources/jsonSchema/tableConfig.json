{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer"
    },
    "flink": {
      "type": "object",
      "additionalProperties": true
    },
    "table": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "primary-key": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "string"
            }
          ]
        },
        "partition-key": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "string"
            }
          ]
        },
        "timestamp": {
          "type": "string"
        },
        "watermark-millis": {
          "oneOf": [
            {
              "type": "string",
              "pattern": "^[0-9]*$"
            },
            {
              "type": "integer",
              "minimum": 0
            }
          ]
        }
      },
      "required": ["type"],
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": { "type": { "const": "source" } }
          },
          "then": {
            "required": ["primary-key", "timestamp"]
          }
        }
      ]
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": ["version", "table"]
}