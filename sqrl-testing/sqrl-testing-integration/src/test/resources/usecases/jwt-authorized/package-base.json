{
  "version": "1",
  "script": {
    "main": "jwt-authorized-base.sqrl"
  },
  "engines" : {
    "vertx" : {
      "authKind": "JWT",
      "config": {
        "jwtAuth": {
          "pubSecKeys": [
            {
              "algorithm": "HS256",
              "buffer": "dGVzdFNlY3JldFRoYXRJc0F0TGVhc3QyNTZCaXRzTG9uZzMyQ2hhcnM="
            }
          ],
          "jwtOptions": {
            "issuer": "my-test-issuer",
            "audience": ["my-test-audience"],
            "expiresInSeconds": 3600,
            "leeway": 30
          }
        }
      }
    }
  }
}
