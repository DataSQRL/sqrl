{
  "version": "1",
  "script": {
    "main": "oauth-authorized.sqrl"
  },
  "compiler": {
    "compile-flink-plan": false
  },
  "engines": {
    "vertx": {
      "authKind": ["OAUTH"],
      "config": {
        "oauth2Options": {
          "site": "${KEYCLOAK_ISSUER}"
        },
        "oauthDiscovery": {
          "authorizationServerUrl": "${KEYCLOAK_EXTERNAL_URL}"
        }
      }
    }
  }
}
