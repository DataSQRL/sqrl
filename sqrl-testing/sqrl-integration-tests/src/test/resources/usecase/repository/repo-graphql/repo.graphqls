type Package {
  name: String!
  latest: Submission
  versions(version: String, variant: String, limit: Int = 10, offset: Int = 0): [Submission!]
}

type Query {
  Package(name: String, limit: Int = 10, offset: Int = 0): [Package!]
  TopicSearch(topicName: String, limit: Int = 10, offset: Int = 0): [TopicSearch!]
  TopicPackages(topicName: String!, limit: Int = 10, offset: Int = 0): [TopicPackages!]
}

type Submission {
  name: String!
  version: String!
  variant: String!
  latest: Boolean!
  type: String
  license: String
  repository: String
  homepage: String
  documentation: String
  readme: String
  description: String
  uniqueId: String!
  keywords: [keywords!]
  repoURL: String!
  file: String!
  hash: String!
  submissionTime: String!
}

type keywords {
  name: String!
}

type TopicSearch {
  topicName: String!
  numPackages: Int!
}

type TopicPackages {
  topicName: String!
  pkgName: String!
  lastSubmission: String!
  numSubmissions: Int!
  latest: Submission
}